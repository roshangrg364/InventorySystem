@model IEnumerable<InventorySystem.Models.Salesummary>
@{
    ViewData["Title"] = "SalesSummary";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@section styles{
    <style>
        .my-custom-scrollbar {
            position: relative;
           
            overflow: auto;
        }

        .table-wrapper-scroll-y {
            display: block;
        }
    </style>
}

<div class="container">
    <div class=" text-center">Sales Summary</div>
    <div>
        <a class="btn btn-primary btn-sm btn-add" asp-controller="Sales" asp-action="Index">New Sales</a>
    </div>
    <div class="row">
        <div class="col-md-12 table-wrapper-scroll-y my-custom-scrollbar">
            <table class="table">
                <thead>
                    <tr>
                        <th>Sales_id</th>
                        <th>Customer</th>
                        <th>Total</th>
                        <th>Discount</th>
                        <th>Vat</th>
                        <th>Net-Total</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        foreach (var summary in Model)
                        {
                            <tr>
                                <td>@summary.sales_id</td>
                                <td>@summary.cus_value.FullName</td>
                                <td>@summary.total_amount</td>
                                <td>@summary.discount</td>
                                <td>@summary.vat</td>
                                <td>@summary.net_total</td>
                                <td>
                                    <a class="btn btn-info btn-details btn-sm"data-toggle="modal" data-target="#myModal">show details</a>
                                    <a href="purchase/Bill?id=@summary.sales_id" class="btn btn-info btn-bill btn-sm">Bill</a>
                                </td>

                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>

     
        <div class="modal fade" id="myModal" role="dialog">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                    </div>
                    <div class="modal-body">
                        <div class="col-md-12 display" style="display:none">
                            <table class="table table-data">
                                <thead>
                                    <tr>
                                        <th>product</th>
                                        <th>quantity</th>
                                        <th>price</th>
                                        <th>Total</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr></tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    </div>
                </div>

            </div>
        </div>

    </div>

   

</div>


@section scripts
{

    <script>
        $(document).ready(function () {
            $('.btn-details').on('click', function () {
                event.preventDefault();
                var id = $(this).closest('tr').find('td').eq(0).text();
                var url = `salesummary/getdetails?id=${id}`;
                console.log(id);
                $.ajax({
                    url: url,
                    type: 'type',
                    dataType: 'json',
                    success: function (data) {

                        console.log(data);
                        $('.display').css({ "display": "block" });
                        $('.table-data tbody tr').remove();

                        for (var i = 0; i < data.length; i++) {

                            $('.table-data tbody').append(
                                `
                                    <tr>
                                        <td>${data[i].product}</td>
                                        <td>${data[i].qty}</td>
                                         <td>${data[i].price}</td>
                                          <td>${data[i].total}</td>
                                    </tr>
                                        `
                            )
                        }
            }
                    })
                })
            })
    </script>
}

