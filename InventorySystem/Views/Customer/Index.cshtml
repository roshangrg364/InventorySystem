@model IEnumerable<InventorySystem.Models.Customer>
@{
    ViewData["Title"] = "Customer";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section styles{ 



}
<div class="container">

    <div class="text-xl-center">
        <h3>Customer Summary</h3>
    </div>

    <div class="form-group">
         <a asp-controller="Customer" asp-action="Create" class="btn btn-info btn-primary ">Add</a>
    </div>
   


    <div>
        <table class="table ">
            <tr>
                <th>@Html.DisplayNameFor(a => a.cus_id)</th>
                <th>@Html.DisplayNameFor(a => a.FullName)</th>
                <th>@Html.DisplayNameFor(a => a.Address)</th>
                <th>@Html.DisplayNameFor(a => a.Contact)</th>
                <th>@Html.DisplayNameFor(a => a.Email)</th>
                <th>@Html.DisplayNameFor(a => a.Status)</th>
                <th>@Html.DisplayNameFor(a => a.image)</th>
            </tr>
            @{
                foreach (var customer in Model)
                {
                        <tr>
                            <td>@customer.cus_id</td>
                            <td>@customer.FullName</td>
                            <td>@customer.Address</td>
                            <td>@customer.Contact</td>
                            <td>@customer.Email</td>
                            <td>@customer.Status</td>
                            <td><img src="~/images/@customer.image" style="height:4rem ;width:4rem;border-radius:100%" /></td>
                            <td>
                                @{
                                    if (customer.Status == "enabled")
                                    {
                                        <a href="/customer/IsEnabledDisbled?id=@customer.cus_id" class="btn  btn-success btn-sm" >Enabled</a>
                                    }
                                    else
                                    {
                                        <a href="/customer/IsEnabledDisbled?id=@customer.cus_id" class="btn  btn-danger btn-sm" >Disabled</a>
                                    }
                                }

                            </td>
                            <td>
                                <a href="/customer/Edit?id=@customer.cus_id" class="btn btn-info btn-secondary btn-sm">Edit </a>
                                <a href="/customer/Delete?id=@customer.cus_id" class="btn btn-info btn-secondary delete-btn btn-sm">Delete</a>
                            </td>

                        </tr>
                                    }
            }
        </table>

        <script>
            $('.delete-btn').on('click', function () {
                event.preventDefault();
                var result = confirm("Do you want to delete?");
                if (result==true) {
                    window.location.href = $(this).attr('href');
                }
            });
        </script>

    </div>
</div>